<div class="container">
  <div class="row">
    <div class="col-sm-8 mt-4 px-sm-0 offset-sm-1">
      <h2><%= t('.sign_in') %></h2>
    </div>

    <div class="col-sm-8 mt-4 px-sm-0 offset-sm-3">
      <span class="font-weight-bold">会員の方はこちらからログイン</span>
    </div>

    <div class="row mx-auto pt-4">
      <div class="col-12 text-center">

        <!--ログイン情報入力フォーム-->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <table class="text-left">
            <tr>
              <th  class="pr-4"><%= f.label t('.email') %></th>
              <td><%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <th><%= f.label t('.password') %></th>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
          </table>
          <% if devise_mapping.rememberable? %>
            <div class="field mt-4">
              <%= f.check_box :remember_me %>
              <%= f.label t('.remember_me') %>
            </div>
          <% end %>

          <div class="actions  my-4">
          <%= f.submit t('.sign_in'), class: "btn btn-primary d-grid gap-2 col-4" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-sm-8 mt-4 px-sm-0 offset-sm-3">
      <span class="font-weight-bold">会員登録がお済でない方</span>
      <div class="row mt-3 px-sm-0 offset-sm-2">
        <%= render "public/shared/links" %>
      </div>
    </div>

  </div>
</div>





