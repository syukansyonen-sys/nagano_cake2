<div class='container px-5 px-sm-0'>
  <div class='row'>
    <h2>注文履歴一覧</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td></td>
            <td>
              <%= "〒" + order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td><%#= .name %></td>
            <td><%= order.total_payment %></td>
            <td></td>
            <td>
              <%= link_to order_path(order.id) do %>
                <p>表示する</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>