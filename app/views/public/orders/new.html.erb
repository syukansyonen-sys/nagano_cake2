<%= form_with model:@order do |f| %>
<div class="ml-5 mt-5">
  <div class="text-center">
    <h2>注文情報入力</h2>
  </div>
  <div>
    <h4>支払方法</h4>
    <div class="ml-4">
      <%= f.radio_button :payment_method, "credit_card" %>
      <%= f.label :payment_method, "クレジットカード" %><br>
      <%= f.radio_button :payment_method, "transfer" %>
      <%= f.label :payment_method, "銀行振込" %>
    </div>
  </div>
  <div>
    <h4>お届け先</h4>
    <div class="ml-4">
      <%= f.radio_button :address, "1" %>
      <%= f.label :address, "ご自身の住所" %>
      <div class="ml-4">
        <#%= order.postal_code %>
      </div>
      <%= f.radio_button :address, "2" %>
      <%= f.label :address, "登録済みの住所から選択" %>
      <div class="ml-4">
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %>
      </div>
      <%= f.radio_button :address, "3" %>
      <%= f.label :address, "新しいお届け先" %><br>
      <div class="ml-4">
        <div>
          <span>郵便番号</span><%= f.text_field :postal_code %>
        </div>
        <div>
          <span>住所</span><%= f.text_field :address %>
        </div>
        <div>
          <span>宛名</span><%= f.text_field :name %>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit "確認画面へ進む", class: "btn btn-sm btn-success" %>
  </div>
</div>
<% end %>
