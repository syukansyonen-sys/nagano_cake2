<h2>配送先登録/一覧</h2>

<!--配送先新規登録-->
<%= form_with model: @address, local: true do |f| %>
  <table>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>宛名</th>
      <td><%= f.text_field :name %></td>
    </tr>
  </table>
  <%= f.submit "新規登録" %>
<% end %>

<!--配送先一覧-->

  <table>
    <thead>
     <tr>
       <th>郵便番号</th>
       <th>住所</th>
       <th>宛名</th>
       <th></th>
     </tr>
    </thead>
  <% @addresses.each do |address| %>
    <tbody>
     <tr>
       <td><%= address.postal_code %></td>
       <td><%= address.address %></td>
       <td><%= address.name %></td>
       <td>
         <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success" %>
         <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-sm btn-danger" %>
       </td>
     </tr>
    </tbody>
  <% end %>
  </table>


