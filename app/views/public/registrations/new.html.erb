<div class="container">
  <div class="row">
    <div class="col-sm-8 mt-4 px-sm-0 offset-sm-1">
      <h2><%= t('.sign_up') %></h2>
    </div>

    <div class="row  mx-auto pt-4">
      <div class="col-12 text-center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <table class="text-left">
            <tr>
              <th>名前</th>
              <td><%= f.label t('.last_name') %></td>
              <td><%= f.text_field :last_name, autofocus: true %></td>
              <td><%= f.label t('.first_name') %></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td><%= f.label t('.last_name_kana') %></td>
              <td><%= f.text_field :last_name_kana %></td>
              <td><%= f.label t('.first_name_kana') %></td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <th><%= f.label t('.email') %></th>
              <td></td>
              <td><%= f.email_field :email, autocomplete: "email" %></td>
            </tr>
            <tr>
              <th><%= f.label t('.postal_code') %></th>
              <td></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <th><%= f.label t('.address') %></th>
              <td></td>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <th><%= f.label t('.phone_number') %></th>
              <td></td>
              <td><%= f.text_field :phone_number %></td>
            </tr>
            <tr>
              <th>
                <%= f.label t('.password') %>
                <% if @minimum_password_length %>
                  <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
                 <% end %>
              </th>
              <td></td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <th><%= f.label t('.password_confirmation') %></th>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>

          </table>
          <div class="actions my-4">
            <%= f.submit "新規登録", class: "btn btn-success d-grid gap-2 col-4" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-sm-8 mt-4 px-sm-0 offset-sm-3">
      <span  class="font-weight-bold">既に登録済みの方</span>
      <div class="row mt-3 px-sm-0 offset-sm-2">
        <%= render "public/shared/links" %>
      </div>
    </div>

  </div>
</div>









