<div class="container">
  <div class="row">
    <div  class="col-sm-8 mt-4 px-sm-0 offset-sm-1">
      <h2>マイページ</h2>
    </div>
    <div class="col-sm-8 mt-4 px-sm-0 offset-sm-3">
      <div class="row">
        <span class="pr-5">登録情報</span>
        <%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success" %>
      </div>
    </div>

    <div class="row mx-auto pt-4">
      <div class="col-12 text-center">
        <table class="table table-bordered text-left">
          <tr>
            <th class="bg-light">氏名</th>
            <td><%= @customer.last_name + "　" + @customer.first_name %></td>
          </tr>
          <tr>
            <th class="bg-light">カナ</th>
            <td><%= @customer.last_name_kana + "　" + @customer.first_name_kana %>
          </tr>
          <tr>
            <th class="bg-light">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th class="bg-light">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="bg-light">電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th class="bg-light">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>

    </div>

  <div class="col-sm-8 mt-4 px-sm-0 offset-sm-3">
    <div class="row mb-4">
      <span class="pr-5">配送先</span>
      <div class="actions">
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary" %>
      </div>
    </div>

    <div class="row">
      <span class="pr-4">注文履歴</span>
      <div class="actions">
        <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>

  </div>
</div>