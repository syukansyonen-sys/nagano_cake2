<h2>会員情報編集</h2>

<%= form_with model: @customer, url: customer_path(@customer), method: :patch do |f| %>

  <p>氏名</p>
  <div class="field">
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <p>フリガナ</p>
  <div class="field">
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <!--郵便番号-->
  <div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

   <!--住所-->
  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>

   <!--電話番号-->
  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%= f.submit '編集内容を保存する' %>
<% end %>
<div>
  <%= link_to "退会する", customers_out_path %>
</div>
