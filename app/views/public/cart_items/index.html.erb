<% if @cart_items.present? %>
 <div class= "container">
  <div class= "row justify-content-star mt-3">
   <span style="font-size : 23pt">
     <i class="fas fa-shopping-cart"> </i>
      ショッピングカート
   </span>
  </div>
  <div class= "row justify-content-end">
    <%= link_to "カートを空にする", cart_items_reset_path, method: :delete, data: {confirm: 'カートを空にしてよろしいですか？'}, class: "btn btn-danger" %>
  </div>
  <div class= "row">
   <div class = "col-12">
    <table class="table table-hover table-bordered">
     <thead class="thead-light">
      <tr>
       <th>商品名</th>
       <th>単価（税込）</th>
       <th>数量</th>
       <th>小計</th>
       <th></th>
      </tr>
    </thead>
    <% @sum = 0 %>
　  <% @cart_items.each do |cart_item| %>
　    <tr>
       <td>
        <% if cart_item.item.image.attached? %>
        <%= image_tag cart_item.item.image, size: "40x40" %>
        <% else %>
        <%= image_tag 'no_image', size: "40x40" %>
        <% end %>
        <%= cart_item.item.name %>
       </td>
       <td>
        <%= cart_item.item.with_tax_price.to_s(:delimited) %>
       </td>
       <td>
        <%= form_with model:cart_item, url: cart_item_path(cart_item), method: :patch , remote: true do |f| %>
        <%= f.number_field :amount, max: 10, min: 1 %>
        <%= f.submit "変更", class: "btn btn-success" %>
        <% end %>
       </td>
       <td>
　      <%= cart_item.subtotal.to_s(:delimited) %>
       </td>
       <td>
        <%= link_to " 削除する", cart_item_path(cart_item), method: :delete, remote: true, data: {confirm: "#{cart_item.item.name}を削除してよろしいですか？"}, class: "btn btn-danger" %>
       </td>
　    </tr>
　    <% @sum += cart_item.subtotal %>
　    <% end %>
     </table>
    </div>
   </div>
   <div class= "row">
    <%= link_to " 買い物を続ける", root_path, class: "btn btn-info" %>
   </div>
   <div class= "row justify-content-end">
    <div class="col-4">
     <table class="table table-hover table-bordered">
      <tr>
       <th>
         合計金額
       </th>
       <th>
        <%= @sum.to_s(:delimited) %>
       <th>
      </tr>
     </table>
    </div>
   </div>
  </div>
 <div class= "row justify-content-center">
  <%= link_to " 情報入力に進む", new_order_path, class: "btn btn-success center-block" %>
 </div>
 <% else %>
  <div class= "row justify-content-center mt-5">
   <div class"col-10">
     <p>お客様のショッピングカートに商品はありません</p>
     <p><%= link_to "商品一覧", items_path, class: "btn-link" %>から商品をお探し下さい。</p>
   </div>
 </div>
<% end %>