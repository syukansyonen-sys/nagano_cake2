<div class='container px-5 px-sm-0'>
  <h2>注文履歴詳細</h2>
  <div class='row'>
    <table class='table table-hover table-inverse'>
      <tr>
        <th>購入者</th>
        <th><%= @order.name %></th>
      </tr>
       <tr>
        <th>注文日</th>
        <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
      </tr>
       <tr>
        <th>配送先</th>
        <th>
          <%= "〒" + @order.postal_code %>
          <%= @order.address %><br>
          <%= @order.name %>
        </th>
      </tr>
       <tr>
        <th>支払方法</th>
        <th><%= @order.payment_method_i18n %></th>
      </tr>
       <tr>
        <th>注文ステータス</th>
        <th>
          <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
            <%= f.select :status, Order.localed_statuses, {} %>
            <%#= f.select :status, options_from_collection_for_select(Order, :id, :status) %>
            <%= f.submit "更新" , class: "btn btn-outline-success" %>
          <% end %>
        </th>
      </tr>
    </table>
  </div>
  <div class='row'>
    <div class='col-md-8'>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <% @order.order_details.each do |order_detail| %>
        <tbody>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.price*order_detail.amount).to_i %></td>
            <td>
              <%= form_with model: order_detail, url: admin_order_order_detail_path(@order.id, order_detail.id), method: :patch do |f| %>
                <%= f.select :making_status, OrderDetail.localed_making_statuses, {} %>
                <%= f.submit "更新" , class: "btn btn-outline-success" %>
              <% end %>
            </td>
            <td></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class='col-md-3'>
      <table class='table table-hover table-inverse'>
        <tr>
          <th>商品合計</th>
          <th><%= @order.total_payment - @order.shipping_cost %></th>
        </tr>
        <tr>
          <th>送料</th>
          <th><%= @order.shipping_cost %></th>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <th><%= @order.total_payment %></th>
        </tr>
      </table>
    </div>
  </div>
</div>