<p id="alert"><%= alert %></p>
<div class="container">
  <div class="row">
    <div class="col-sm-8 mt-4 px-sm-0 offset-sm-1">
      <h2><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
    </div>

    <div class="row mx-auto pt-4">
      <div class="col-12 text-center">
        <table class="text-left">
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
        <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch, local: true do |f| %>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name, autofocus: true %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <th class="pr-4">メールアドレス</th>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :is_status, :false, checked: true %>
              <%= f.label :is_status, "有効", {value: :false, style: "display: inline-block;"} %>
              <%= f.radio_button :is_status, :true %>
    　         <%= f.label :is_status, "退会", {value: :true, style: "display: inline-block;"} %>
    　       </td>
          </tr>
        </table>
          <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>

        <% end %>
      </div>
    </div>
  </div>
</div>















