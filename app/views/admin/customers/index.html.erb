<h2>会員一覧</h2>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @customers.each do |customer| %>
       <td><%= customer.id %></td>
       <!--リンクを実装する-->
       <td><%= customer.last_name + customer.first_name %></td>
       <td><%= customer.email %></td>
       <td>
         <!--true=退会済み、false=有効-->
         <%= customer.is_status %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
