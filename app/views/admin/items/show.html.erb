<p id="notice"><%= notice %></p>
<div class="container">
  <h2>商品詳細</h2>
    <div class="row">
      <div class="col">
      <% if @item.image.attached? %>
      <%= image_tag @item.image, size: "350x250" %>
      <% else %>
      <%= image_tag 'no_image', size: "350x250" %>
      <% end %>
      </div>
      <div class="col">
        <table class="table">
            <tr>
              <th>商品名</th>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <th>
                  税込価格<br>
                  (税抜き価格)
              </th>
              <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</td>
            </tr>
            <tr>
              <th>販売ステータス</th>
                <td>
                     <% if @item.is_active == true %>
                        <p class="text-success ">販売中</p>
                     <% else %>
                        <p class="text-secondary ">販売停止中</p>
                     <% end %>
                </td>
            </tr>
          </table>
          <div>
            <p><%= link_to '編集する', edit_admin_item_path(@item.id), class: 'btn btn-success' %></p>
            <p><%= link_to "商品一覧へ戻る", admin_items_path, class:"btn btn-outline-secondary"%></p>
          </div>
      </div>
   </div>
 </div>
