<div class="container">
    <div class="row">
        <div class="col">
            <h2>ジャンル編集</h2>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <%= form_with model: @genre,url: admin_genre_path, method: :patch, local: true do |f| %>
            <div class="form-group">
              <%= f.label "ジャンル名",class:"form-label" %>
              <%= f.text_field :name,class:"form-control" %>
            </div>
            <div class="col-md justify-content-around">
            <%=f.submit "変更を保存", class:"btn btn-success"%>
            </div>
            <% end %>
        </div>
    </div>
</div>