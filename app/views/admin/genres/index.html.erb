<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row justify-content-start">
        <div class="col-5 ml-5">
            <h2>ジャンル一覧・追加</h2>
        </div>
    </div>
    <div class="row justify-content-start">
        <div class="col-7 mt-4">
            <%= form_with model: @genre,url: admin_genres_path,method: :post, remote: true do |f| %>
             <%= f.label :name,"ジャンル名"%>
             <%= f.text_field :name, id: "form", placeholder:"ジャンル名" %>
             <%= f.submit "新規登録", class:"btn btn-success" %>
            <% end %>
        </div>
    </div>
     <div class="row justify-content-start">
      <div class="col-7 mt-5">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    </div>