      </div>
      <div class="text-center font-weight-bold">
        <% if customer_signed_in? %>
          ようこそ、<%= current_customer.last_name %>さん！
        <% end %>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

        <!--顧客側がログインした場合-->
        <% if customer_signed_in? %>
          <li>
            <%= link_to customers_my_page_path, class: 'nav-link text-white border rounded mr-2 bg-success' do %>
            <i class="fas fa-users"></i>マイページ
            <% end %>
          </li>
          <li>
            <%=  link_to items_path, class: 'nav-link text-white border rounded mx-2 bg-success' do %>
            <i class="fas fa-cheese"></i>商品一覧
            <% end %>
          </li>
          <li>
            <%=  link_to cart_items_path, class: 'nav-link text-white border rounded mx-2 bg-success' do %>
            <i class="fas fa-shopping-cart"></i>カート
            <% end %>
          </li>
          <li>
            <%= link_to  destroy_customer_session_path, method: :delete, class: 'nav-link text-white border rounded ml-2 bg-success' do %>
            <i class="fas fa-sign-out-alt"></i>ログアウト
            <% end %>
          </li>

        <!--管理者がログインしていた場合-->
        <% elsif admin_signed_in? %>
           <li>
            <%= link_to admin_items_path, class: 'nav-link text-white border rounded mr-2 bg-success' do %>
            <i class="fas fa-cheese"></i>商品一覧
            <% end %>
          </li>
          <li>
            <%=  link_to admin_customers_path, class: 'nav-link text-white border rounded mx-2 bg-success' do %>
            <i class="fas fa-users"></i>会員一覧
