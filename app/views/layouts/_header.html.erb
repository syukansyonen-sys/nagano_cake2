          <li>
            <%= link_to items_path, class: 'nav-link text-white border rounded mx-2 bg-success' do %>
            <i class="fas fa-cheese"></i>商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_registration_path,class: 'nav-link text-white border rounded mx-2 bg-success' do %>
            <i class="fas fa-user-plus"></i>新規登録
            <% end %>
          </li>
          <li>
            <%= link_to customer_session_path ,class: 'nav-link text-white border rounded ml-2 bg-success' do %>
            <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
